

#mosaicpage h2
  color:$red

#newmessagebutton
  defaultbutton 0
  width:150px
  fixed: top 40px right 20px

#newmessagebutton:active
  background-color:$black

#mosaicpage p.description
  bodytext :0
  display:block;
  width:300px;
  float:left
  margin: 20px

#messageList
  width:700px
  display:block
  float:left;
  color:$black
  bodytext:0

#messageList .message
  display:block;
  height:180px;
  width:180px
  background-color:$red
  margin:0 0 20px 30px
  float:left
  overflow:hidden
  cursor:pointer


#messageList .message span
  display:block;
  text-wrap: normal
  float:left;
  width:160px;

#messageList span.snippet
  height:130px
  margin:10px

#messageList span.writername
  height:30px
  background-color: $lightoverlay
  color:$white
  text-align:center
  line-height:30px
  padding:0 10px 0 10px

#messagedialog
  dialog :0

#messageform
  dialogform :0

#viewmessagedialog
  dialog :0

#messagedisplaybox
  dialogform :0
  background-color:$darkblue
  color:$lightgrey
  font: 25px/30px $helv

#messagedisplaybox div
  text-align:justified
  margin: 20px

#messagedisplaybox .closebutton
  background-color: $red

