.sidebar
  display:block;
  width:300px;
  float:left

#mosaicpage h2
  color:$red

#newmessagebutton
  defaultbutton 0
  line-height:180px
  width:180px;
  height:180px;
  float:left
  margin:0 0 20px 30px

#newmessagebutton:active
  background-color:$black

#mosaicpage p.description
  bodytext :0
  display:block;
  width:300px;
  float:left
  margin: 20px

#messageList
  width:700px
  display:block
  float:left;
  color:$black
  bodytext:0
  margin-top:40px

#messageList .message
  display:block;
  height:180px;
  width:180px
  background-color:$red
  margin:0 0 20px 30px
  float:left
  overflow:hidden
  cursor:pointer


#messageList .message span
  display:block;
  text-wrap: normal
  float:left;
  width:160px;

#messageList span.snippet
  height:130px
  margin:10px

#messageList span.writername
  height:30px
  background-color: $lightoverlay
  color:$white
  text-align:center
  line-height:30px
  padding:0 10px 0 10px


/* import the dialog files */
@import "dialogs/messageviewdialog"
@import "dialogs/messagecreatedialog"