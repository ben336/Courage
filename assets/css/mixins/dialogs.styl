dialog()
  background-color:$overlay
  width:100%
  height:100%
  z-index:100
  display:block;
  position:fixed;
  top:0
  left: 0


dialogform()
  width:600px
  background-color:$red
  margin-top:100px
  padding: 0px 0px 20px 10px
  overflow:hidden
  center:0


dialogLabel()
  font: 20px/25px $helv
  margin-right:20px
  width:150px
  display:block
  float:left

dialogInput()
  display:block
  float:left
  border-radius:0px
  background-color:$white
  bodytext: 0
  color:$black
  width:400px
  border: 0px
  &.inputerror
    background-color:$grey
    color:$red
  transition: all 0.1s ease-out;
  &:focus
    background-color:$lightgrey
