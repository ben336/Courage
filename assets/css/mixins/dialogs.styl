dialog()
  background-color:$overlay
  width:100%
  height:100%
  z-index:1000
  display:block;
  position:fixed;
  top:0
  left: 0


dialogform()
  width:600px
  background-color:$silver
  margin-top:100px
  padding: 0px 30px 30px 30px
  overflow:hidden
  center:0
  color:$darkerblue
  ::-webkit-input-placeholder
     color: $lightgrey
  :-moz-placeholder
   color: $lightgrey
  ::-moz-placeholder
   color: $lightgrey
  :-ms-input-placeholder
   color: $lightgrey


dialogEntry()
  display:block
  float:left
  width:600px
  margin:10px 0 0 0
  padding:0


dialogLabel()
  font: 20px/25px $helv
  margin:0 20px 0 0
  padding:0
  width:180px
  display:block
  float:left

dialogInput()
  display:block
  resize: none;
  float:left
  border-radius:0px
  background-color:$white
  bodytext: 0
  width:397px
  border: 0px
  padding: 0 0 0 3px
  &.inputerror
    background-color:$darkred
    color:$white
  transition: all 0.1s ease-out;
  &:focus
    background-color:$lightgrey
  &.inputerror:focus
    background-color:$lightgrey
    color:$darkerblue
