#mosaicdialog
  dialog 0

#mosaicform
  dialogform 0

a.closebutton
  dialogCloseButton 0

a.closebutton:active
  activeDialogCloseButton 0

#mosaicform h3
  text-align:center
  font:30px/30px $helv
  display:block

#mosaicform div
  dialogEntry()

#mosaicform label
  dialogLabel 0

#mosaicform input,textarea
  dialogInput 0

#mosaicform input
  height: 24px
  padding-left: 3px

/* Individual form sizes */

#mosaicform .fname
  width:190px
  margin-right: 14px
#mosaicform .lname
  width:190px

/* Input button */

#mosaicform #newmosaicbutton
  defaultbutton()
  center:0
  width:200px

#mosaicform #newmosaicbutton:active
  background-color:$black

#mosaicform #newmosaicbutton
  margin-top: 30px



/** Placeholder color fixes */

#mosaicform ::-webkit-input-placeholder
     color: $darkgrey

#mosaicform :-moz-placeholder
   color: $darkgrey


#mosaicform ::-moz-placeholder
   color: $darkgrey


#mosaicform :-ms-input-placeholder
   color: $darkgrey




